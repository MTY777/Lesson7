        android:id="@+id/image_fata_four"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/first_text_four"
        app:layout_constraintStart_toEndOf="@id/first_text_four"
        app:layout_constraintBottom_toBottomOf="@id/first_text_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>












</androidx.constraintlayout.widget.ConstraintLayout>